<UserControl x:Class="REghZyNBTEditor.NBT.Controls.NBTPrimitiveControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:REghZyNBTEditor.NBT.Controls"
             xmlns:converters="clr-namespace:REghZyNBTEditor.Converters" 
             xmlns:viewmodels="clr-namespace:REghZyNBTEditor.ViewModels" 
             d:DataContext="{d:DesignInstance Type=viewmodels:NBTTreeItemViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NBTTypeToIconConverter x:Key="IconConverter"/>
    </UserControl.Resources>
    <Grid>
        <Label Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="25" HorizontalAlignment="Left" 
               Content="{Binding Type, Converter={StaticResource IconConverter}}" FontSize="20" FontWeight="Bold"/>
        <Label Padding="0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Stretch" 
               Content="{Binding Name}" FontSize="16" Margin="30,0,0,0"/>
    </Grid>
</UserControl>
